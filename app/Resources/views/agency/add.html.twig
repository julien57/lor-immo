{% extends 'agency_layout.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-light">
                        Ajouter un bien
                    </div>

                    <div class="card-body">

                        {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-3">
                                {{ form_row(form.title) }}

                                {{ form_row(form.room) }}

                                {{ form_row(form.bedroom) }}
                            </div>
                            <div class="col-md-9">
                                {{ form_row(form.description) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                {{ form_row(form.area, {'attr': {'placeholder': '0 si nul'}}) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(form.garden, {'attr': {'placeholder': '0 si nul'}}) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(form.heater) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(form.garage) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                {{ form_row(form.type) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.department) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.city) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                {{ form_row(form.price) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="float-left">
                                    <a href="{{ path('agency_home_dashboard') }}" class="btn-lg btn-secondary">
                                        <i class="fa fa-align-center"></i> Retour
                                    </a>
                                </div>
                                <div class="float-right">
                                    <button type="submit" class="btn-lg btn-info">
                                        <i class="fa fa-download"></i> Ajouter
                                    </button>
                                </div>
                            </div>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}