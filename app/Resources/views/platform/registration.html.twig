{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Homepage{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Lor-Immo</h1>
            <p class="lead">Trouvez facilement votre bien immobilier en Lorraine.</p>
        </div>
    </div>

    <div class="container">

        {{ form_start(form) }}
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_row(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.city) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password) }}
                </div>
                <button type="submit" class="btn btn-info">S'inscrire</button>
            </div>
        {{ form_end(form) }}

    </div>
{% endblock %}